-- CREATE USER postgres WITH PASSWORD 'postgres'; -- this has already been specified in docker-compose.yml
CREATE DATABASE db;
GRANT ALL PRIVILEGES ON DATABASE db TO postgres;

CREATE SCHEMA "books";

CREATE TYPE "books"."products_status" AS ENUM (
  'out_of_stock',
  'in_stock',
  'running_low'
);

CREATE TABLE "books"."merchants" (
  "id" int,
  "country_code" int,
  "merchant_name" varchar,
  "created at" varchar,
  "admin_id" int,
  PRIMARY KEY ("id", "country_code")
);

CREATE TABLE "books"."order_items" (
  "order_id" int,
  "product_id" int,
  "quantity" int DEFAULT 1
);

CREATE TABLE "books"."orders" (
  "id" int PRIMARY KEY,
  "user_id" int UNIQUE NOT NULL,
  "status" varchar,
  "created_at" varchar
);

CREATE TABLE "books"."products" (
  "id" int PRIMARY KEY,
  "name" varchar,
  "merchant_id" int NOT NULL,
  "price" int,
  "status" books.products_status,
  "created_at" datetime DEFAULT (now())
);

CREATE TABLE "books"."product_tags" (
  "id" int PRIMARY KEY,
  "name" varchar
);

CREATE TABLE "books"."merchant_periods" (
  "id" int PRIMARY KEY,
  "merchant_id" int,
  "country_code" int,
  "start_date" datetime,
  "end_date" datetime
);

CREATE TABLE "users" (
  "id" INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  "full_name" varchar,
  "created_at" timestamp,
  "country_code" int
);

CREATE TABLE "countries" (
  "code" int PRIMARY KEY,
  "name" varchar,
  "continent_name" varchar
);

CREATE INDEX "product_status" ON "books"."products" ("merchant_id", "status");

CREATE UNIQUE INDEX ON "books"."products" ("id");

COMMENT ON COLUMN "books"."orders"."created_at" IS 'When order created';

ALTER TABLE "books"."merchants" ADD FOREIGN KEY ("admin_id") REFERENCES "users" ("id");

ALTER TABLE "books"."merchants" ADD FOREIGN KEY ("country_code") REFERENCES "countries" ("code");

ALTER TABLE "books"."order_items" ADD FOREIGN KEY ("order_id") REFERENCES "books"."orders" ("id");

ALTER TABLE "books"."order_items" ADD FOREIGN KEY ("product_id") REFERENCES "books"."products" ("id");

ALTER TABLE "books"."products" ADD FOREIGN KEY ("merchant_id") REFERENCES "books"."merchants" ("id");

CREATE TABLE "books"."product_tags_products" (
  "product_tags_id" int,
  "products_id" int,
  PRIMARY KEY ("product_tags_id", "products_id")
);

ALTER TABLE "books"."product_tags_products" ADD FOREIGN KEY ("product_tags_id") REFERENCES "books"."product_tags" ("id");

ALTER TABLE "books"."product_tags_products" ADD FOREIGN KEY ("products_id") REFERENCES "books"."products" ("id");


ALTER TABLE "books"."merchant_periods" ADD FOREIGN KEY ("merchant_id", "country_code") REFERENCES "books"."merchants" ("id", "country_code");

ALTER TABLE "users" ADD FOREIGN KEY ("country_code") REFERENCES "countries" ("code");
